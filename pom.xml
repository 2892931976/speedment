            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>
        
        <dependency>
            <groupId>codegen</groupId>
            <artifactId>CodeGen</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        
        
