<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="container" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="6.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane fx:id="openContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="280.0" style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Open existing project" textFill="#3e6293" StackPane.alignment="TOP_CENTER">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="buttonOpen" defaultButton="true" mnemonicParsing="false" text="Select Groovy-file">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </StackPane>
      <VBox alignment="TOP_RIGHT" maxWidth="-Infinity" prefHeight="200.0" prefWidth="280.0" spacing="16.0" style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Create from database" textFill="#3f6291">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="fieldType" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
            <HBox spacing="8.0">
               <children>
                  <TextField fx:id="fieldHost" prefHeight="25.0" prefWidth="248.0" promptText="Host" />
                  <TextField fx:id="fieldPort" promptText="Port" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TextField fx:id="fieldUser" promptText="Username" />
            <PasswordField fx:id="fieldPass" promptText="Password" />
            <TextField fx:id="fieldName" promptText="Database name" />
            <TextField fx:id="fieldSchema" promptText="Schema name" />
            <Button fx:id="buttonConnect" defaultButton="true" disable="true" mnemonicParsing="false" text="Connect">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
   </children>
</HBox>
