<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>speedment</artifactId>
    <groupId>com.speedment</groupId>
    <version>3.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>speedment-all</artifactId>
  <packaging>bundle</packaging>
  <name>Speedment - Runtime</name>
  <description>The runtime environment of Speedment that all projects must depend
        on to use the framework.</description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-Description>The runtime environment of Speedment.</Bundle-Description>
            <Export-Package>com.speedment.runtime.annotation.*,
                            com.speedment.runtime.component.*,
                            com.speedment.runtime.config.*,
                            com.speedment.runtime.db.*,
                            com.speedment.runtime.exception.*,
                            com.speedment.runtime.field.*,
                            com.speedment.runtime.manager.*,
                            com.speedment.runtime.stream.*,
                            com.speedment.runtime.util.*,
                            com.speedment.runtime,
                            com.speedment.common.injector,
                            com.speedment.common.injector.annotation.*,
                            com.speedment.common.injector.exception.*,
                            com.speedment.common.logger,
                            com.speedment.common.tuple</Export-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <id>shade-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <shadedArtifactId>speedment-all</shadedArtifactId>
          <createSourcesJar>true</createSourcesJar>
          <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
          <createDependencyReducedPom>true</createDependencyReducedPom>
          <minimizeJar>false</minimizeJar>
          <artifactSet>
            <excludes>
              <exclude>com.speedment.common:injector</exclude>
              <exclude>com.speedment.common:logger</exclude>
              <exclude>com.speedment.common:tuple</exclude>
            </excludes>
          </artifactSet>
          <relocations>
            <relocation>
              <pattern>com.speedment.common.lazy</pattern>
              <shadedPattern>com.speedment.internal.common.lazy</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.speedment.common.mapstream</pattern>
              <shadedPattern>com.speedment.internal.common.mapstream</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.speedment.common.json</pattern>
              <shadedPattern>com.speedment.internal.common.json</shadedPattern>
            </relocation>
          </relocations>
          <transformers>
            <transformer>
              <resources>
                <resource>LazyTemplate.txt</resource>
              </resources>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.speedment.common</groupId>
      <artifactId>logger</artifactId>
      <version>1.0.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.speedment.common</groupId>
      <artifactId>injector</artifactId>
      <version>1.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.speedment.common</groupId>
      <artifactId>tuple</artifactId>
      <version>1.0.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>

